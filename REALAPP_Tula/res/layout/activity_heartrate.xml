<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274370"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="TULA: Heart Rate"
        android:textAlignment="center"
        android:textColor="#A9D4F8"
        android:textSize="36sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#A9D4F8"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_heartRate"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Heart Rate"
                android:textAlignment="center"
                android:textColor="#274370"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_hrReading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="right"
                    android:text=" 82"
                    android:textAlignment="center"
                    android:textColor="#274370"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/textView_bpm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="left"
                    android:text=" bpm"
                    android:textAlignment="center"
                    android:textColor="#274370"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#A9D4F8"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_attackPercentage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Chance of POTS Attack"
                android:textAlignment="center"
                android:textColor="#274370"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="right"
                    android:text=" 20"
                    android:textAlignment="center"
                    android:textColor="#274370"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/textView_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="left"
                    android:text=" %"
                    android:textAlignment="center"
                    android:textColor="#274370"
                    android:textSize="28sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <Button
            android:id="@+id/button_explain"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#274370"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="explain"
            android:text="What does this percentage mean?"
            android:textColor="#A9D4F8"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/emptySpace2"
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="back"
            android:text="Back"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>