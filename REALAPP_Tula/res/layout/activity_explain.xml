<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274370"
    android:orientation="vertical">

    <View
        android:id="@+id/emptySpace0"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="227dp"
            android:layout_height="59dp"
            android:fontFamily="sans-serif-black"
            android:gravity="right"
            android:text="TULA"
            android:textAlignment="textEnd"
            android:textColor="#A9D4F8"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/tula" />
    </LinearLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <TextView
        android:id="@+id/textView_changeParameters"
        android:layout_width="380dp"
        android:layout_height="95dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="What does the percentage likelihood of a POTS attack mean?"
        android:textAlignment="center"
        android:textColor="#A9D4F8"
        android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#274370"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="We calculate the chance of a POTS attack by monitoring your prior trends in heart rate and comparing against clinical criteria. \n\n0%-30% = normal activity \n31%-50% = slightly elevated chance of POTS symptoms \n51%-100% = you may currently be experiencing or will soon have POTS symptoms. \n\nPlease note that sudden start of vigorous exercise may also cause an alert."

                android:textAlignment="center"

                android:textColor="#A9D4F8"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <Button
            android:id="@+id/button_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="back"
            android:text="Back"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>