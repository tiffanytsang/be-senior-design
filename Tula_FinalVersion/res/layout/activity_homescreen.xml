<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274370"
    android:orientation="vertical">

    <View
        android:id="@+id/emptySpace1"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="227dp"
            android:layout_height="59dp"
            android:fontFamily="sans-serif-black"
            android:gravity="right"
            android:text="TULA"
            android:textAlignment="textEnd"
            android:textColor="#A9D4F8"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/tula" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button_heartrate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="checkHeartRate"
            android:text="Check My Heart Rate"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:id="@+id/button_pressure"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="checkPressure"
            android:text="Check My Pressure"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:id="@+id/button_userinput"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="adjustParameters"
            android:text="Adjust My Parameters"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:id="@+id/button_logout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#A9D4F8"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="logout"
            android:text="Logout"
            android:textColor="#274370"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>