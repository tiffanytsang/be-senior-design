<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4268A3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="TULA"
        android:textAlignment="center"
        android:textColor="#A4C5D6"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView_changeParameters"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Change Pressure Parameters"
        android:textAlignment="center"
        android:textColor="#A4C5D6"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pressure Band 1"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="Enter Circumference (cm)"
                android:textAlignment="center"
                android:textColor="#4268A3" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace1"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pressure Band 2"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="Enter Circumference (cm)"
                android:textAlignment="center"
                android:textColor="#4268A3" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace2"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:hint="Pressure Band 3"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="Enter Circumference (cm)"
                android:textAlignment="center"
                android:textColor="#4268A3" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace3"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pressure Band 4"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="Enter Circumference (cm)"
                android:textAlignment="center"
                android:textColor="#4268A3" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace4"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pressure Band 5"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="Enter Circumference (cm)"
                android:textAlignment="center"
                android:textColor="#4268A3" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/emptySpace5"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/button_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#A4C5D6"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="changeParameters"
            android:text="Submit"
            android:textColor="#4268A3"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/button_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#A4C5D6"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:onClick="back"
            android:text="Back"
            android:textColor="#4268A3"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>