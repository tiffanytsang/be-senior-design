<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4268A3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="TULA"
        android:textAlignment="center"
        android:textColor="#A4C5D6"
        android:textSize="36sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_heartRate"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Heart Rate"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_hrReading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="right"
                    android:text=" 82"
                    android:textAlignment="center"
                    android:textColor="#4268A3"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/textView_bpm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="left"
                    android:text=" bpm"
                    android:textAlignment="center"
                    android:textColor="#4268A3"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_commonHrRanges"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Common Ranges: 60-85"
        android:textAlignment="center"
        android:textColor="#A4C5D6"
        android:textSize="18sp" />

    <View
        android:id="@+id/emptySpace"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4C5D6"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView_pressure"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Pressure"
                android:textAlignment="center"
                android:textColor="#4268A3"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_pReading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="right"
                    android:text="35"
                    android:textAlignment="center"
                    android:textColor="#4268A3"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/textView_mmhg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="left"
                    android:text=" mm Hg"
                    android:textAlignment="center"
                    android:textColor="#4268A3"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_commonPRanges"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Common Ranges: 20-40"
        android:textAlignment="center"
        android:textColor="#A4C5D6"
        android:textSize="18sp" />

    <View
        android:id="@+id/emptySpace2"
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#A4C5D6"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Change My Threshold"
            android:textColor="#4268A3"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>